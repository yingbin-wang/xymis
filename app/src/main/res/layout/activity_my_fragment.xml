<?xml version="1.0" encoding="utf-8"?>
<com.cn.wti.entity.view.custom.menu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_249_249_249">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <!--侧滑菜单-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@mipmap/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/height_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/height_50">

                <ImageView
                    android:id="@+id/touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yhm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ListView
                    android:id="@+id/page01_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>

            </LinearLayout>

            <TextView
                android:id="@+id/userAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议|隐私政策"/>
            <TextView
                android:id="@+id/version_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!--主布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/mainView">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/color_235_235_240">

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/color_246_246_246"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tab1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:drawableTop="@drawable/tab_img_selector"
                        android:background="@null"
                        android:button="@null"
                        android:drawablePadding="-18dp"
                        android:gravity="center"
                        android:paddingLeft="0dp" />


                    <RadioButton
                        android:id="@+id/tab2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@null"
                        android:drawablePadding="-18dp"
                        android:drawableTop="@drawable/tab_img_selector"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:visibility="gone"/>

                    <RadioButton
                        android:id="@+id/tab3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@null"
                        android:drawablePadding="-18dp"
                        android:drawableTop="@drawable/tab_img_selector"
                        android:gravity="center"
                        android:paddingLeft="0dp" />

                    <RadioButton
                        android:id="@+id/tab4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:background="@null"
                        android:drawablePadding="-18dp"
                        android:drawableTop="@drawable/tab_img_selector"
                        android:gravity="center"
                        android:paddingLeft="0dp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</com.cn.wti.entity.view.custom.menu.SlidingMenu>