<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.dina.ui.widget.UITableView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableView"
                style="@style/UITableView" />

            <!--  明细表一 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_10"
                android:visibility="gone"
                android:id="@+id/mx1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/shiqing"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/mx1_title"
                        android:text="明细1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@mipmap/backadd"
                            android:textColor="@color/colorWhite"

                            android:id="@+id/mx1_add"/>
                    </LinearLayout>

                </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none">

                            <com.dina.ui.widget.UITableMxView
                                android:id="@+id/mx1_View"
                                style="@style/UITableView"/>
                        </ScrollView>
                    </LinearLayout>
            </LinearLayout>

            <!--明细表二-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_10"
                android:visibility="gone"
                android:id="@+id/mx2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/shiqing"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/mx2_title"
                        android:text="明细1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@mipmap/backadd"
                            android:textColor="@color/colorWhite"

                            android:id="@+id/mx2_add"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <com.dina.ui.widget.UITableMxView
                            android:id="@+id/mx2_View"
                            style="@style/UITableView"/>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

            <!--明细表三-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_10"
                android:visibility="gone"
                android:id="@+id/mx3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/shiqing"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/mx3_title"
                        android:text="明细3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/backadd"
                            android:textColor="@color/colorWhite"

                            android:id="@+id/mx3_add"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <com.dina.ui.widget.UITableMxView
                            android:id="@+id/mx3_View"
                            style="@style/UITableView"/>
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>