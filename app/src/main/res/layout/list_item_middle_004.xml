<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/xiayuan"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_12"
                android:stretchColumns="*">
                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="title"
                            android:layout_width="0dp"
                            android:id="@+id/title"
                            android:visibility="visible"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>
                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/subtitle"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="content_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_1"
                            android:visibility="visible"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </TableRow>
                <TableRow >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="title_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_1"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>

                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="content_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_2"
                            android:visibility="visible"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="title_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_2"
                            android:visibility="visible"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>
                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:text="content_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_3"
                            style="@style/content_list_small_text"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </TableRow>
                <TableRow>
                    <ImageView  android:layout_width="match_parent" android:layout_height="1dp" android:layout_weight="1" android:background="@color/color_ebebf0" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <com.cn.wti.entity.view.custom.textview.TextView_custom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_5"
        android:visibility="gone"/>
    <com.cn.wti.entity.view.custom.textview.TextView_custom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_6"
        android:visibility="gone"/>
    <com.cn.wti.entity.view.custom.textview.TextView_custom
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/content_7"
        android:visibility="gone"
        style="@style/content_list_small_text"/>
    <com.cn.wti.entity.view.custom.textview.TextView_custom
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/content_8"
        android:visibility="gone"
        style="@style/content_list_small_text"/>

</LinearLayout>

