<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@mipmap/wenzibg"
    android:padding="@dimen/padding_1">

    <LinearLayout
        android:id="@+id/layout_1_1"
        style="@style/content_report_title_layout"
        android:layout_weight="2">
        <com.cn.wti.entity.view.custom.textview.TextView_TableRow_custom
            android:id="@+id/list_1_1"
            style="@style/content_report_title_text"/>

        <ImageView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_1_2"
        style="@style/content_report_title_layout"
        android:layout_weight="1">
        <com.cn.wti.entity.view.custom.textview.TextView_TableRow_custom
            android:id="@+id/list_1_2"
            style="@style/content_report_title_text"/>

        <ImageView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_1_3"
        style="@style/content_report_title_layout"
        android:layout_weight="1">
        <com.cn.wti.entity.view.custom.textview.TextView_TableRow_custom
            android:id="@+id/list_1_3"
            style="@style/content_report_title_text"/>

        <ImageView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_1_4"
        style="@style/content_report_title_layout"
        android:layout_weight="1">
        <com.cn.wti.entity.view.custom.textview.TextView_TableRow_custom
            android:id="@+id/list_1_4"
            style="@style/content_report_title_text"/>

        <ImageView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

    </LinearLayout>

</LinearLayout>