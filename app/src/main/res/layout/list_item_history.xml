<?xml version="1.0" encoding="utf-8"?>
<com.cn.wti.entity.view.custom.button.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_12">

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/color3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:id="@+id/status"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/red01_dot_bg"
                    android:gravity="center" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/itemContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="0dp"
                        android:id="@+id/title"
                        android:visibility="visible"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"
                        android:text="title"/>
                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtitle"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"
                        android:text="subtitle"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:text="content_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/content_1"
                        android:visibility="visible"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:text="title_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_1"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:text="content_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/content_2"
                        android:visibility="visible"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:text="title_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_2"
                        android:visibility="visible"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:text="content_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/content_3"
                        style="@style/content_list_small_text"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

        </LinearLayout>

    </LinearLayout>

</com.cn.wti.entity.view.custom.button.SlidingButtonView>

