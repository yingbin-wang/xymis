<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_form"
    android:background="@color/line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40">
        <include layout="@layout/layout_title_myassignment_edit"></include>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/line"
                android:paddingBottom="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:paddingLeft="@dimen/padding_12"
                    android:paddingRight="@dimen/padding_12">
                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:id="@+id/make_emp_name"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="2"
                        android:id="@+id/trantime"/>

                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:id="@+id/tasktype"
                        android:textColor="@color/line"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_12"
                android:paddingRight="@dimen/padding_12"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <com.cn.wti.entity.view.custom.textview.TextView_custom
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:id="@+id/taskname"/>

                <com.cn.wti.entity.view.custom.textview.TextView_custom
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize_15"
                    android:id="@+id/taskdetails"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_12"
                    android:paddingRight="@dimen/padding_12"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.cn.wti.entity.view.custom.textview.TextView_custom
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:text="完成时间"
                        style="@style/content_list_small_text_12"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/padding_10">

                        <com.cn.wti.entity.view.custom.textview.TextView_custom
                            android:id="@+id/completetime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/padding_12"
                            android:hint="点击选择"
                            style="@style/content_list_small_text_right"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:paddingLeft="@dimen/padding_12"
                            android:id="@+id/select_completetime"
                            android:gravity="center_vertical"
                            android:background="#00000000"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/chevron"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/padding_12"
                android:paddingRight="@dimen/padding_12"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:text="完成情况"
                    style="@style/content_list_small_text_12"/>

                <com.cn.wti.entity.view.custom.EditText_custom
                    android:id="@+id/completeschedule"
                    style="@style/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="200dp"
                    android:singleLine="false"
                    android:scrollbars="vertical"
                    android:background="@null"
                    android:gravity="top"
                    android:paddingBottom="-20dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>