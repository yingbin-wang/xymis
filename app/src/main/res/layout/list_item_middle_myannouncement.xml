<?xml version="1.0" encoding="utf-8"?>
<com.cn.wti.entity.view.custom.button.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsv"
    android:layout_width="wrap_content"
    android:layout_height="135dp"
    android:scrollbars="none"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/itemContainer"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/list_item_middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content"  />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.cn.wti.entity.view.custom.textview.TextView_custom
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/height_40"
                                    android:layout_weight="1"
                                    android:id="@+id/title"
                                    android:textColor="@color/color_24_120_200"
                                    android:textSize="16sp"
                                    android:paddingRight="@dimen/padding_5"
                                    android:layout_alignParentLeft="true"
                                    style="@style/content_page_large_text"/>

                                <com.cn.wti.entity.view.custom.textview.TextView_custom
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/height_40"
                                    android:id="@+id/subtitle"
                                    android:textColor="@color/color_0_169_0"
                                    android:textSize="14sp"
                                    android:layout_alignParentRight="true"
                                    style="@style/content_page_large_text"/>

                            </LinearLayout>


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/split_line"/>

                        </LinearLayout>

                        <LinearLayout
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <com.cn.wti.entity.view.custom.textview.TextView_custom
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textMultiLine"
                                android:gravity="top"
                                android:id="@+id/content_1"
                                android:visibility="visible"
                                android:singleLine="false"
                                android:ellipsize="none"
                                android:maxLines="3"
                                android:textColor="@color/color_120_115_136"
                                android:textSize="13sp"
                                style="@style/content_list_small_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:duplicateParentState="true"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.cn.wti.entity.view.custom.textview.TextView_custom
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_24_120_200"
                                android:textSize="12sp"
                                android:id="@+id/content_2"
                                style="@style/content_list_small_text"/>

                            <com.cn.wti.entity.view.custom.textview.TextView_custom
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_24_120_200"
                                android:textSize="12sp"
                                android:id="@+id/content_3"
                                android:visibility="visible"
                                style="@style/content_list_small_text"/>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/chevron"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/keyguard_text_color_red">

                <TextView
                    android:id="@+id/btn_delte"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="删除"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_15"
            android:background="@color/line"/>

    </LinearLayout>

</com.cn.wti.entity.view.custom.button.SlidingButtonView>
